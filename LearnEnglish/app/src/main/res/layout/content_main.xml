<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.english.alin.learnenglish.MainActivity"
    tools:showIn="@layout/activity_main"
    android:padding="0dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:text="Listen"
        android:id="@+id/listen"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#d4d3d3"
        android:clickable="true"
        android:background="#4462af"
        android:textSize="30dp"
        android:padding="5dp"
        android:onClick="startListen"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:text="Image"
        android:id="@+id/images"
        android:layout_below="@+id/listen"
        android:layout_alignParentStart="true"
        android:textColor="#d4d3d3"
        android:clickable="true"
        android:background="#5bb1dc"
        android:textSize="30dp"
        android:padding="5dp"
        android:onClick="startImages"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:text="Quiz"
        android:id="@+id/quiz"
        android:layout_below="@+id/images"
        android:layout_alignParentEnd="true"
        android:textColor="#d4d3d3"
        android:clickable="true"
        android:background="#3da9ae"
        android:textSize="30dp"
        android:padding="5dp"
        android:onClick="startQuiz"/>
</RelativeLayout>
