<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.QuizActivity"
    tools:showIn="@layout/activity_quiz">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/step1"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listen"
        android:id="@+id/textView5"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:onClick="startListenActivity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do not view the questions until after you have listened to the audio file. Reading the questions first will not help you improve your English listening skills."
        android:id="@+id/textView6"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textColor="#a6a6a6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/step2"
        android:id="@+id/textView7"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz"
        android:id="@+id/textView8"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. What kind of workshop attended our participants?"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUSIC"
            android:id="@+id/radioButton"
            android:checked="false"
            android:tag="1"
            android:onClick="correctAnswer"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DANCE"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:tag="2"
            android:onClick="correctAnswer"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TPRS"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:tag="3"
            android:onClick="correctAnswer"
            />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. What is the name of the workshop hoster ?"
        android:id="@+id/textView10"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Snow"
            android:id="@+id/radioButton4"
            android:checked="false"
            android:tag="4"
            android:onClick="correctAnswer"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bruce Lee"
            android:id="@+id/radioButton5"
            android:checked="false"
            android:tag="5"
            android:onClick="correctAnswer"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ray Orton"
            android:id="@+id/radioButton6"
            android:checked="false"
            android:tag="6"
            android:onClick="correctAnswer"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blank Ray"
            android:id="@+id/radioButton7"
            android:checked="false"
            android:tag="7"
            android:onClick="correctAnswer"
            />
    </RadioGroup>


</RelativeLayout>
